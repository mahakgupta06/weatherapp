    <!--main header-->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" id="submitbtn" value="search">
                    </form>
                </div>
                <div class="tempinfo">
                    <div class="top_layer">
                        <p id="day">THURSDAY</p>
                        <p id="today_date">3 July </p>
                       
                    </div>
                    <div class="main_layer">
                        <p id="cityname">Get output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{>footer}}


    <!-- Option 1: Bootstrap Bundle with Popper -->
